@using Microsoft.AspNetCore.Identity
@inject SignInManager<Uzivatel> SignInManager
@inject UserManager<Uzivatel> UserManager



<ul class="navbar-nav">

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-zvyrazneni" asp-area="Identity" asp-page="/Account/Manage/Email" title="Manage">Zdravím @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">

                <button type="submit" class="btn btn-dark custom-nav-btn">Odhlásit se</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-secondary custom-nav-btn">Zaregistrovat se</button>
        </form>
    </li>

    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="btn btn-secondary custom-nav-btn">Přihlásit se</button>
        </form>
    </li>
}
</ul>
